ВЫБРАТЬ
    Ключи.Контрагент,
    Ключи.ДоговорКонтрагента,
    Ключи.НоменклатурнаяГруппа,

    // Даты можно выводить ЛЮБЫЕ — но они НЕ ключ
    МИН(Ключи.Дата) КАК Дата,

    ЕСТЬNULL(Реализация.РеализацияКоличество, 0) КАК РеализацияКоличество,
    ЕСТЬNULL(Реализация.РеализацияСумма, 0)       КАК РеализацияСумма,

    ЕСТЬNULL(Факт.ФактКоличество, 0)              КАК ФактКоличество,
    ЕСТЬNULL(Факт.ФактСумма, 0)                   КАК ФактСумма,

    ЕСТЬNULL(Корректировка.КоррКоличество, 0)     КАК КорректировкаКоличество,
    ЕСТЬNULL(Корректировка.КоррСумма, 0)          КАК КорректировкаСумма

ИЗ
    (
        ВЫБРАТЬ
            Контрагент,
            ДоговорКонтрагента,
            НоменклатурнаяГруппа,
            Дата
        ИЗ КлючиРеализация

        ОБЪЕДИНИТЬ ВСЕ

        ВЫБРАТЬ
            Контрагент,
            ДоговорКонтрагента,
            НоменклатурнаяГруппа,
            Дата
        ИЗ КлючиФакт

        ОБЪЕДИНИТЬ ВСЕ

        ВЫБРАТЬ
            Контрагент,
            ДоговорКонтрагента,
            НоменклатурнаяГруппа,
            Дата
        ИЗ КлючиКорректировки
    ) КАК Ключи

СГРУППИРОВАТЬ ПО
    Контрагент,
    ДоговорКонтрагента,
    НоменклатурнаяГруппа

ЛЕВОЕ СОЕДИНЕНИЕ Реализация
    ПО Реализация.Контрагент = Ключи.Контрагент
       И Реализация.ДоговорКонтрагента = Ключи.ДоговорКонтрагента
       И Реализация.НоменклатурнаяГруппа = Ключи.НоменклатурнаяГруппа

ЛЕВОЕ СОЕДИНЕНИЕ Факт
    ПО Факт.Контрагент = Ключи.Контрагент
       И Факт.ДоговорКонтрагента = Ключи.ДоговорКонтрагента
       И Факт.НоменклатурнаяГруппа = Ключи.НоменклатурнаяГруппа

ЛЕВОЕ СОЕДИНЕНИЕ Корректировка
    ПО Корректировка.Контрагент = Ключи.Контрагент
       И Корректировка.ДоговорКонтрагента = Ключи.ДоговорКонтрагента
       И Корректировка.НоменклатурнаяГруппа = Ключи.НоменклатурнаяГруппа
;
